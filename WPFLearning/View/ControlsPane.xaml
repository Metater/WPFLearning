<UserControl x:Class="WPFLearning.View.ControlsPane"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPFLearning.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <Grid Background="#393053" DataContext="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type UserControl}}}">
        <StackPanel Orientation="Vertical">
            <Expander Header="Info" Foreground="WhiteSmoke" ExpandDirection="Down">
                <StackPanel>
                    <Label Content="{Binding Settings.EntityCount}" Foreground="WhiteSmoke" VerticalAlignment="Center"/>
                    <Slider Value="{Binding Settings.EntityCount, UpdateSourceTrigger=PropertyChanged}" Minimum="1" Maximum="100" HorizontalAlignment="Stretch" VerticalAlignment="Center"/>
                </StackPanel>
            </Expander>
        </StackPanel>
    </Grid>
</UserControl>
